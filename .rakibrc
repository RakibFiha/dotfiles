# usage: tinyurl "URL"
tinyurl(){
  if (( $# == 0 )); then
    IFS= read -r link
    curl -s tinyurl.com/api-create.php?url="${link}"
  else
    local link="$1"
    curl -s tinyurl.com/api-create.php?url="${link}"
  fi
}

# text sharing
# usage: echo "hello world" | shareit
# usage: shareit "some thing" 
# usage: echo "${texts}" | curl -F 'f:1=<-' ix.io
shareit(){
  if (( $# == 0 )); then
    curl -F 'f:1=<-' ix.io < /dev/stdin
  else
    curl -F 'f:1=<-' ix.io <<< "$1"
  fi
}

